<div page>
    <div card bg-teal50 z-1>
        <h3> Company Information </h3>
        <form action="add.do">
            <div control>
                <label fg-teal700>Company Name</label>
                <input type="text" name="name" placeholder="Company Name" size="50">
            </div>
            <div control>
                <label fg-teal700>Address</label>
                <input type="test" name="address" placeholder="Address">
            </div>
            <div>
                <input type="test" name="city" placeholder="City" size="19">
                <input type="test" name="state" placeholder="State" size="6">
                <input type="test" name="zipCode" placeholder="Zip code" size="8">
            </div>
            <div control align-right>
                <button type="submit" bg-teal300 fg-teal900>Cancel</button>
                <button bg-teal300 fg-teal900>Save</button>
            </div>
        </form>
    </div>
</div>